/* MACOS / GNOME HYBRID THEME FOR ROFI */
/* Refined: Horizontal Flow, 7 Columns, Pure App Launcher */

configuration {
    /* ONLY Application launcher (No window switcher) */
    modi: "drun"; 
    
    show-icons: true;
    display-drun: "ï€‰";
    drun-display-format: "{name}";
}

* {
    font: "Montserrat Bold 11"; 

    /* --- COLORS --- */
    bg0:  #1a1a1acc;   /* Dark blurry background */
    bg1:  #ffffff26;   /* Input bar */
    bg-selected:  #ffffff15; /* GNOME Style Selection */

    fg0:  #ffffff;       
    fg1:  #ffffff80;     

    background-color: transparent;
    text-color:       @fg0;
    padding:          0px;
    margin:           0px;
}

window {
    transparency: "real";
    fullscreen:   true;
    padding:      0em;
    background-color: @bg0;
}

mainbox {
    padding:  48px;
    children: [ inputbar, listview ];
    spacing:  24px;
}

/* --- SEARCH PILL --- */
inputbar {
    background-color: @bg1;
    text-color:       @fg0; 
    margin:   0px 25%; 
    padding:  12px 16px; 
    spacing:  8px;
    border-radius:  50%; 
    children: [ icon-search, entry ];
}

prompt { enabled: false; }

icon-search {
    expand:   false;
    filename: "search-symbolic"; 
    size:     24px;
    vertical-align: 0.5;
    text-color: inherit; 
}

entry {
    placeholder:       "Search...";
    placeholder-color: @fg1;
    text-color:        @fg0;
    vertical-align:    0.5;
}

/* --- APP GRID (Horizontal Flow) --- */
listview {
    flow:         horizontal; /* Fills Left-to-Right first */
    columns:      7;
    lines:        5;
    spacing:      12px;
    margin:       24px 8%; 
    fixed-columns: true;
    scrollbar:    true;
    scrollbar-width: 4px;
    border: 0px; 
}

scrollbar {
    handle-width: 4px;
    handle-color: #ffffff40;
    border-radius: 4px;
    padding:      0px 4px;
}

/* --- ELEMENTS --- */
element {
    padding:        16px 8px;
    spacing:        8px;
    orientation:    vertical;
    border-radius:  12px; 
    cursor:         pointer;
}

element normal.normal, element alternate.normal {
    background-color: transparent;
    text-color:       @fg0;
}

element selected.normal {
    background-color: @bg-selected;
    text-color:       @fg0;
    border:           1px solid;
    border-color:     #ffffff26;
}

element-icon {
    size: 4.5em; 
    horizontal-align: 0.5;
    cursor: inherit;
}

element-text {
    horizontal-align: 0.5;
    vertical-align:   0.5;
    cursor: inherit;
}