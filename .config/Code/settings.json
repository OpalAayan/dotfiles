{
    "editor.linkedEditing": true,
    "editor.rulers": [
        {
            "column": 80,
            "color": "#00FF0010"
        },
        {
            "column": 100,
            "color": "#BDB76B15"
        },
        {
            "column": 120,
            "color": "#FA807219"
        }
    ],
    "editor.unicodeHighlight.includeComments": true,
    "workbench.colorCustomizations": {
        "[Default Dark Modern]": {
            "tab.activeBorderTop": "#00FF00",
            "tab.unfocusedActiveBorderTop": "#00FF0088",
            "textCodeBlock.background": "#00000055"
        },
        "editor.wordHighlightStrongBorder": "#FF6347",
        "editor.wordHighlightBorder": "#FFD700",
        "editor.selectionHighlightBorder": "#A9A9A9"
    },
    "workbench.editor.revealIfOpen": true,
    "workbench.tree.indent": 20,
    "emmet.variables": {
        "lang": "en"
    },
    "cSpell.diagnosticLevel": "Hint",
    "trailing-spaces.backgroundColor": "rgba(255,0,0,0.1)",
    "trailing-spaces.includeEmptyLines": false,
    "terminal.integrated.tabs.hideCondition": "never",
    "terminal.integrated.enablePersistentSessions": false,

    // --- Java Settings ---
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.detectJdksAtStart": false,
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.debug.settings.hotCodeReplace": "auto",
    "java.dependency.packagePresentation": "hierarchical",
    "java.maxConcurrentBuilds": 4,
    "java.sources.organizeImports.staticStarThreshold": 1,
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-openjdk"
        },
        {
            "name": "JavaSE-17",
            "path": "/usr/lib/jvm/java-17-openjdk"
        },
        {
            "name": "JavaSE-24",
            "path": "/usr/lib/jvm/java-24-openjdk",
            "default": true
        }
    ],

    // --- Terminal Config ---
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": "zsh"
        },
        "Java 11": {
            "overrideName": true,
            "env": {
                "JAVA_HOME": "/usr/lib/jvm/java-11-openjdk"
            },
            "path": "bash"
        },
        "Java 17": {
            "overrideName": true,
            "env": {
                "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk"
            },
            "path": "bash"
        },
        "Java 24 (Default)": {
            "overrideName": true,
            "env": {
                "JAVA_HOME": "/usr/lib/jvm/java-24-openjdk"
            },
            "path": "bash"
        }
    },
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.defaultProfile.linux": "zsh",

    // --- Maven/Gradle ---
    "maven.terminal.customEnv": [
        {
            "environmentVariable": "JAVA_HOME",
            "value": "/usr/lib/jvm/java-24-openjdk"
        }
    ],
    "maven.executable.path": "/usr/bin/mvn",
    "java.import.gradle.java.home": "/usr/lib/jvm/java-24-openjdk",
    "java.import.gradle.home": "/usr/share/gradle", // Change if using another location

    // --- UI and Styling ---
    "workbench.colorTheme": "Ocean Space",
    "editor.fontSize": 23.5,
    "terminal.integrated.focusAfterRun": "terminal",
    "symbols.hidesExplorerArrows": false,
    "window.titleBarStyle": "custom",
    "code-runner.runInTerminal": true,
    "explorer.confirmDelete": false,
    "editor.inlineSuggest.suppressSuggestions": true,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.untitled.language": null,
    "editor.cursorStyle": "line-thin",
    "editor.overtypeCursorStyle": "underline-thin",
    "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
    "editor.fontFamily": "'FiraCode Nerd Font', monospace",
    "editor.fontLigatures": true,
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,
    "workbench.startupEditor": "none",
    "window.restoreWindows": "none",
    "github.copilot.nextEditSuggestions.enabled": true,
    "workbench.iconTheme": "material-icon-theme",
    "redhat.telemetry.enabled": true,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "workbench.welcomePage.walkthroughs.openOnInstall": false,
    "java.help.firstView": "none",
    "jdk.telemetry.enabled": false
}
